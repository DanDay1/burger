  <div class="container bg">

    <div class="row">

      <div class="center col-sm-12">
        <h1>Cheesy Burger</h1>
        <img src="assets/img/burgerImage.png" alt="Eat-Da-Burger App">

      </div>
    </div>
    <!-- end .row -->
    <div class="row">
      <div class="col-sm-6">

      <br>
      <h2>Burger Menu</h2>

      <ul>     
        {{#each burgers}}
          {{#unless this.devoured}}
            <li> 
              {{this.burger_name}}

              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class="btn-warning btn-sm">Devour It!</button>
              </form>
         
            </li> 
          {{/unless}}
        {{/each}}
      </ul>
      </div>

      <div class="col-sm-6">
      <br>
      <h2>Burgers Eaten</h2>
        {{#each burgers}}
          {{#if this.devoured}}
          <li> 
            {{this.burger_name}}

          </li>
              
          {{/if}}
        {{/each}}
      </div>

    </div>

  <!-- end .row -->
  


<h2>Build Your Own!</h2>

<div class="row">
  <div class="center col-sm-12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add Burger">
      <button type="submit" class="btn-warning btn-lg">Add a Burger</button>
    </form>
  </div>
</div>
