<h1>Cheesy Burger</h1>

<main>

  <div class="container">

    <div class="row">

      <div class="col s6">
      <h2>burgers</h2>
      <p>Click item to devour</p>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
      <h2>devoured</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>

    </div>

  </div>
  
</main>

<h2>Build Your Own!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add Burger">
      <button type="submit" class="addBurgerButton">Add a Burger Sir</button>
    </form>
  </div>
</div>
